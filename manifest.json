{
  "name": "Ocado CMS Hacks App",
  "description": "CMS pruned down to the barest essentials for managers.",
  "version": "0.4.0",
  "manifest_version": 2,

  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },

  "icons": {
    "16": "images/cms_hacks_16.png",
    "36": "images/cms_hacks_36.png",
    "48": "images/cms_hacks_48.png",
    "57": "images/cms_hacks_57.png",
    "72": "images/cms_hacks_72.png",
    "78": "images/cms_hacks_78.png",
    "96": "images/cms_hacks_96.png",
    "114": "images/cms_hacks_114.png",
    "120": "images/cms_hacks_120.png",
    "128": "images/cms_hacks_128.png",
    "144": "images/cms_hacks_144.png",
    "152": "images/cms_hacks_152.png"
  },

  "permissions": [
    "storage",
    "unlimitedStorage",
    "notifications",
    "http://change.ocado.com/",
    "https://www.google-analytics.com/"
  ]
}
